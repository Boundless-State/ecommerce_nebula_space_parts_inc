@model IReadOnlyList<Services.Interfaces.CartItemDto>
@{
    ViewData["Title"] = "Checkout";
}
<div class="container py-4">
    <h1 class="mb-3">Checkout</h1>

    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="row g-4">
        <div class="col-md-7">
            <form asp-action="PlaceOrder" method="post">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input name="customerName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="customerEmail" type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Shipping Address</label>
                    <textarea name="shippingAddress" class="form-control" rows="3" required></textarea>
                </div>
                <button class="btn btn-primary btn-lg" type="submit">Pay & Place Order</button>
            </form>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">Order Summary</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var i in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div>@i.Name</div>
                                    <small class="text-muted">x @i.Quantity</small>
                                </div>
                                <div>@(i.UnitPrice * i.Quantity).ToString("C")</div>
                            </li>
                        }
                    </ul>
                    <div class="d-flex justify-content-between mt-3">
                        <strong>Total</strong>
                        <strong>@Model.Sum(x => x.UnitPrice * x.Quantity).ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
