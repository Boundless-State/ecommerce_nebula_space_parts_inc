@model List<Models.Entities.Product>
@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<Models.Entities.Category> ?? [];
    string? q = ViewBag.Query as string;
    int? currentCat = ViewBag.CategoryId as int?;
}
<div class="container py-4">
    <h1 class="mb-3">Products</h1>
    <form method="get" class="row g-2 mb-4">
        <div class="col-sm-6 col-md-5">
            <input name="q" class="form-control" placeholder="Search products..." value="@q" />
        </div>
        <div class="col-sm-4 col-md-3">
            <select name="categoryId" class="form-select">
                <option value="">All categories</option>
                @foreach (var c in categories)
                {
                    <option value="@c.Id" selected="@(currentCat == c.Id)">@c.Name</option>
                }
            </select>
        </div>
        <div class="col-sm-2 col-md-2">
            <button class="btn btn-primary w-100" type="submit">Filter</button>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var p in Model)
        {
            var imgSrc = string.IsNullOrWhiteSpace(p.ImageUrl)
                ? Url.Content("~/images/products/placeholder.svg")
                : (p.ImageUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                    ? p.ImageUrl
                    : Url.Content(p.ImageUrl.StartsWith("~") || p.ImageUrl.StartsWith("/")
                        ? p.ImageUrl
                        : $"~/images/products/{p.ImageUrl}"));
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@imgSrc" asp-append-version="true" class="card-img-top" alt="@p.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text text-muted small mb-2">@p.Category?.Name</p>
                        <p class="card-text">@p.Description</p>
                        <div class="mt-auto d-flex justify-content-between align-items-center gap-2">
                            <span class="fw-bold">@p.Price.ToString("C")</span>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary">Details</a>
                                <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <input type="hidden" name="qty" value="1" />
                                    <button class="btn btn-primary" type="submit">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
