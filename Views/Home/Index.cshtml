@model Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-4">
    <h1 class="mb-4">Featured Spacecraft Parts</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var p in Model.FeaturedProducts)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@p.ImageUrl" class="card-img-top" alt="@p.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text text-muted small mb-2">@p.CategoryName</p>
                        <p class="card-text">@p.Description</p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="fw-bold">@p.Price.ToString("C")</span>
                            <button class="btn btn-primary" disabled>Coming Soon</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
